			            		<forkMode>none</forkMode>            				            								   	
			          		<!--  <debugForkedProcess>true</debugForkedProcess> -->          		          		            	            	          	    	          			          		          				          		
			          </configuration>
			        </plugin> 			        
			        <plugin>
			          <groupId>org.apache.maven.plugins</groupId>
			          <artifactId>maven-antrun-plugin</artifactId>
			          <executions>
				          <execution>
				          	  <id>Test Harness Cleanup</id>
				          	  <phase>validate</phase>
				          	  <goals>
				          	  		<goal>run</goal>
				          	  </goals>		          	  
