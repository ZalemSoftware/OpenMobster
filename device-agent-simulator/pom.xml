	<!-- build configuration -->
	<build>		
		<plugins>			     		  		       		  
     		<plugin>
	          <groupId>org.apache.maven.plugins</groupId>
	          <artifactId>maven-surefire-plugin</artifactId>
	          <configuration>           
	          		<includes>	          		    	          		             		  		          		    	          		         		    	          		             		    	          		             		    	          		    	          		            		          		          		   	          		    		          		    	          		    
	          			<include>**/TestTwoWaySync.java</include>		          			                    				
