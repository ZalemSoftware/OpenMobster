<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>org.crud.cloud.app</groupId>
	<name>crud-cloud</name>
	<artifactId>crud-cloud</artifactId>
	<packaging>jar</packaging>
	<version><appCreator.project.version></version>
	
	<appCreator.properties>

	<dependencies>
		<!--
			DO NOT MODIFY: Required by the OpenMobster Mobile Cloud Platform  
		-->
		<dependency>
			<groupId>org.openmobster.core</groupId>
			<artifactId>cloud-sdk</artifactId>
			<version>${openmobster.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.openmobster.core.dev.tools
			</groupId>
			<artifactId>dev-cloudServer
				</artifactId>
			<version>${openmobster.version}</version>
		</dependency>

		<dependency>
			<groupId>org.openmobster.core</groupId>
			<artifactId>device-agent-simulator
				</artifactId>
			<scope>test</scope>
			<version>${openmobster.version}</version>
		</dependency>
		
		<!--
			More dependencies can be added here 
		 -->
	</dependencies>

	<!--
		DO NOT MODIFY: Required by the OpenMobster Mobile Cloud Platform  
	-->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<!--
		DO NOT MODIFY: Required by the OpenMobster Mobile Cloud Platform  
	-->
	<profiles>
		<profile>
			<id>runCloud</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins
						</groupId>
						<artifactId>maven-surefire-plugin
						</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<phase>integration-test</phase>
								<goals>
									<goal>java</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<mainClass>org.openmobster.dev.tools.server.RunCloudServer
							</mainClass>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>debugCloud</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins
						</groupId>
						<artifactId>maven-surefire-plugin
						</artifactId>
						<configuration>
							<skip>true</skip>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<executions>
							<execution>
								<phase>integration-test</phase>
								<goals>
									<goal>exec</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<executable>java</executable>
							<arguments>
								<argument>-Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=y</argument>
								<argument>-classpath</argument> 
								<classpath />
								<argument>org.openmobster.dev.tools.server.RunCloudServer
								</argument>
							</arguments>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
	<repositories>
		<!--
			DO NOT MODIFY: Required by the OpenMobster Mobile Cloud Platform
		-->
		<repository>
			<id>openmobster-maven</id>
			<url>http://openmobster.googlecode.com/svn/maven2
			</url>
		</repository>

		<repository>
			<id>jboss</id>
			<url>http://anonsvn.jboss.org/repos/repository.jboss.org/maven2
			</url>
		</repository>

		<repository>
			<id>maven-codehaus</id>
			<name>Public online CodeHaus Maven Repository</name>
			<url>http://repository.codehaus.org
			</url>
		</repository>

		<repository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/
			</url>
		</repository>

		<!-- 
			More repositories can be added here 
		-->
	</repositories>
</project>
